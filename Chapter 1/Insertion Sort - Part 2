#link : https://www.hackerrank.com/challenges/insertionsort2/problem

// Complete the insertionSort2 function below.
void insertionSort2(int n, int arr_count, int* arr) {
    int i,j,c;
    int temp;

    //Iteration from the second element to the last
    for (i=1;i<n;i++){
        j=i;
        //Swap element if it finds a lesser value, but keep swapping until it finds a bigger element or have reached the first element
        while ((j>0)&&(arr[j]<arr[j-1])){
            temp=arr[j];
            arr[j]=arr[j-1];
            arr[j-1]=temp;
            j--;
            }
        //Print Array
        for (c=0;c<n;c++)
            printf("%d ",arr[c]);
            printf("\n");
    }
}
