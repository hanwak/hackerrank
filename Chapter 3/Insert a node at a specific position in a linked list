#link : https://www.hackerrank.com/challenges/insert-a-node-at-a-specific-position-in-a-linked-list/problem?h_r=internal-search

SinglyLinkedListNode* insertNodeAtPosition(SinglyLinkedListNode* head, int data, int position) {
    int i=0; //Counter

    //Define and allocate the new node that need to be inserted 
    SinglyLinkedListNode *newnode, *temp;
    newnode=malloc(sizeof(SinglyLinkedListNode));
    newnode->data=data;
    
    //Assign list temp as the head list
    temp=head;

    //Search the list until it reached the position-1 for the new node
    while(i<position-1){
        temp=temp->next;
        i++;
    }

    //Assign the next newnode pointer to point the next element of the list
    newnode->next=temp->next;
    //change the temp next to point the newnode (insert node)
    temp->next=newnode;
    
    return head;
}
